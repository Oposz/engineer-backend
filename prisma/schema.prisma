generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String
  lastName     String
  password     String
  universities University[]
  projects     Project?     @relation(fields: [projectId], references: [id])
  projectId    String?
}

model University {
  id          String    @id @default(cuid())
  name        String
  description String
  photo       String?
  users       User[]
  projects    Project[]
}

model Project {
  id                String     @id @unique @default(cuid())
  name              String
  description       String?
  photo             String?
  favourite         Boolean
  availableSlots    Int
  signedUsers       User[]
  dueTo             DateTime?
  leadingUniversity University @relation(fields: [universityId], references: [id])
  universityId      String
}
